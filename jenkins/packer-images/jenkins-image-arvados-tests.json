{
  "variables": {
        "key_file": "{{env `packerbuildkey`}}",
        "git_hash": "{{env `git_hash`}}"
    },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `key_file` }}",
      "project_id": "phoenix-project-42-ci",
      "source_image": "debian-11-bullseye-v20241009",
      "zone": "us-central1-b",
      "disk_size": "20",
      "image_name": "jenkins-image-arvados-tests-{{isotime \"20060102150405\"}}",
      "image_family": "jenkins",
      "ssh_username": "jenkins"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "node-ready.sh",
      "destination": "/tmp/node-ready.sh"
    },
    {
      "type": "shell",
      "script": "./jenkins-image-common.sh"
    },
    {
      "type": "shell",
      "script": "./jenkins-image-with-docker.sh"
    },
    {
      "type": "shell",
      "environment_vars": [
        "GIT_HASH={{ user `git_hash` }}"
      ],
      "script": "./jenkins-image-arvados-tests.sh"
    }
  ]
}
