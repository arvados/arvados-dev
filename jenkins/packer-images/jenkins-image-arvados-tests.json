{
  "variables": {
        "key_file": "{{env `packerbuildkey`}}",
        "git_hash": "{{env `git_hash`}}"
    },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `key_file` }}",
      "project_id": "phoenix-project-42-ci",
      "source_image": "debian-11-bullseye-v20241009",
      "zone": "us-central1-b",
      "disk_size": "20",
      "image_name": "jenkins-image-arvados-tests-{{isotime \"20060102150405\"}}",
      "image_family": "jenkins",
      "ssh_username": "jenkins"
    }
  ],
  "provisioners": [{
      "type": "ansible",
      "command": "/opt/ansible/bin/ansible-playbook",
      "playbook_file": "../../ansible/jenkins-arvados-tests.yml",
      "user": "jenkins",
      "ansible_env_vars": [
          "ANSIBLE_ROLES_PATH=/usr/local/arvados-dev/ansible/roles:/usr/src/arvados/tools/ansible/roles"
      ],
      "extra_arguments": [
          "--extra-vars", "
arvados_config_file=/usr/src/arvados/tools/ansible/files/default-test-config.yml
arvados_postgresql_hba_method=md5
",
      ]
  }]
}
